<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jpventura.footballscores" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".content.ScoresProvider"
            android:authorities="com.jpventura.footballscores" />

        <activity
            android:name=".app.AboutActivity"
            android:label="About"
            android:parentActivityName=".app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.MainActivity" />
        </activity>

        <service android:name=".service.GetFootballScoresService" />

        <receiver android:name=".widget.FootballScoresWidgetProvider"
            android:label="@string/title_widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/football_scores_widget_info" />
        </receiver>
    </application>

</manifest>
