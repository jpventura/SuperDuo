<resources>
    <style name="Theme.Alexandria" parent="Base.Theme.Alexandria">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:toolbarStyle">@style/Widget.Alexandria.Toolbar</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Alexandria.Preferences" parent="Base.Theme.Alexandria">
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:toolbarStyle">@style/Widget.Alexandria.Toolbar</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.Alexandria.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text</item>
    </style>
</resources>
